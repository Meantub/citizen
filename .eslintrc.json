{
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "globals": {
    "app": true,
    "CTZN": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 0,
    "no-debugger": 0
  }
}
